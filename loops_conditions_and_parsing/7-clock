#!/usr/bin/env bash
# This script displays hours from 0 to 12, and for each hour, it displays minutes from 1 to 59.

hours=0
minutes=1

# Loop through hours 0 to 12
while [ "$hours" -le 12 ]; do
    echo "Hour: $hours"  # Print the hour header
    # Loop through minutes 1 to 59
    while [ "$minutes" -le 59 ]; do
        echo "$minutes"  # Print minutes without leading zeros
        minutes=$((minutes + 1))
    done
    minutes=1  # Reset minutes to 1 after each hour
    hours=$((hours + 1))
done | head -n 70  # Display only the first 70 lines

